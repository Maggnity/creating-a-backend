<%- include('includes/head') %> 
<%- include('includes/nav') %>

<div class="container">
    <div class="column">
        <div class="col-lg-8 my-3 mx-auto">
            <h1 class="display-2 text-center">Criar conta</h1>
            <p class="text-center lead">Faca login ou crie sua conta abaixo.</p>

            <%- include('includes/messages') %>
            
            message aqui
            <div class="row">
                <div class="col-lg">
                    <h4>Faca seu cadastro</h4>
                    <p>
                        Se voce ainda nao tem conta preencha o formulario abaixo
                    </p>
                    <form action="/login/register" method="POST">
                        <input
                            type="hidden"
                            name="_csrf"
                            value=<%= csrfToken %>
                        />

                        <div class="form-group my-3">
                            <label for="">E-mail</label>
                            <input
                                type="email"
                                class="form-control"
                                name="email"
                            />
                        </div>
                        <div class="form-group my-3">
                            <label for="">Senha</label>
                            <input
                                type="password"
                                class="form-control"
                                name="password"
                            />
                        </div>
                        <button type="submit" class="btn btn-primary my-3">
                            Criar minha conta
                        </button>
                    </form>
                </div>
                <div class="col-lg">
                    <h4>Realize seu login</h4>
                    <p>Acesse sua conta</p>
                    <form action="/login/login" method="POST">
                        <input
                            type="hidden"
                            name="_csrf"
                            value=<%= csrfToken %>

                        >
                        <div class="form-group my-3">
                            <label>E-mail</label>
                            <input
                                type="email"
                                class="form-control"
                                name="email"
                            />
                        </div>
                        <div class="form-group my-3">
                            <label>Senha</label>
                            <input
                                type="password"
                                class="form-control"
                                name="password"
                            />
                        </div>
                        <button 
                            type="submit" 
                            class="btn btn-primary my-3"
                        >
                            Entrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('includes/footer') %>
